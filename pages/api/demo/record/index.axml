<view class="page">
  <view class="page-description">录音</view>
  <view class="page-section">
    <view class="page-section-btns">
      <!-- 开始录音时会获取权，录音最多60s -->
      <view onTap="startRecord">开始录音，10s后自动停止</view>
      <!-- 默认会生成一个文件 -->
      <view onTap="endRecord">停止录音</view>
    </view>
  </view>